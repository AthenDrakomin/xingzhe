rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 公开可读的集合
    match /articles/{document} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.resource.data.keys().hasOnly(['title', 'slug', 'content', 'excerpt', 'coverImage', 'author', 'tags', 'category', 'status', 'publishedAt', 'views']) &&
                     request.resource.data.title is string &&
                     request.resource.data.content is string;
      allow delete: if request.auth != null;
    }
    
    match /pages/{document} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    match /media/{document} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // 管理员可以读写所有用户数据，普通用户只能读取自己的数据
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.token.admin == true || request.auth.uid == userId);
      allow create, update: if request.auth != null && (request.auth.token.admin == true || request.auth.uid == userId);
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}